{% extends 'Admin/admin_layout.html.twig' %}

{% block body %}
    <section class="content-header">
        <h1>
            Post
            <small>Criar Post</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>

        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
