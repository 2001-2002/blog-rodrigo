{% extends 'Admin/admin_layout.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Usuários
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('user_index') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>

        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        {% include 'includes/message.html.twig' %}

        <div class="col-md-12">
            <a href="{{ path('user_new') }}" style="float:right" class="btn btn-md btn-success">Criar Usuário</a>
        </div>
        <table class="table table-striped  table-hover table-responsive table-bordered">
            <thead>
                <tr>
                    <th class="col">Id</th>
                    <th class="col">Nome</th>
                    <th class="col">Email</th>
                    <th class="col">Usuário</th>
                    <th class="col">Criado em</th>
                    <th class="col">Atualizado em</th>
                    <th class="col">Ações</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td class="row">{{ user.id }}</td>
                    <td class="row">{{ user.firstName }} {{ user.lastName }}</td>
                    <td class="row">{{ user.email }}</td>
                    <td class="row">{{ user.username }}</td>
                    <td class="row">{{ user.createdAt ? user.createdAt|date('d/m/Y H:i:s') : '' }}</td>
                    <td class="row">{{ user.updatedAt ? user.updatedAt|date('d/m/Y H:i:s') : '' }}</td>
                    <td class="row">
                        <ul>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">Ações &nbsp;&nbsp;<i class="fa fa-caret-down"></i></button>
                                    <ul class="dropdown-menu">

                                            <li>
                                                <a href="{{ path('user_show', {'id': user.id}) }}">ver</a>
                                            </li>
                                            <li>
                                                <a href="{{ path('user_edit', {'id': user.id}) }}">editar</a>
                                            </li>

                                    </ul>
                                </div>
                        </ul>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </section>
    <!-- /.content -->
{% endblock %}
