{% extends 'Admin/admin_layout.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<section class="content-header">
    <h1>
        Usuário
        <small>Mostrar Usuário</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>

    </ol>
</section>

<!-- Main content -->
<section class="content">
    <table class="table">
        <tbody>
        {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
        {% endif %}
            <tr>
                <th>Primeiro Nome</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Ultimo Nome</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Usuário</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Criado em</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Atualizado em</th>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}

        <a href="{{ path('user_index') }}" class="btn btn-default">Voltar</a>
        <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary">Editar</a>
    {% else %}
        <a href="{{ path('admin_post') }}" class="btn btn-default">Voltar</a>
        <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary">Editar</a>
    {% endif %}
</section>

{% endblock %}
