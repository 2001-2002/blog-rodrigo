{% extends 'Admin/admin_layout.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<section class="content-header">
    <h1>
        Categoria
        <small>Mostrar Categoria</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>

    </ol>
</section>

<!-- Main content -->
<section class="content">
    <table class="table">
        <tbody>
        {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
        {% endif %}
            <tr>
                <th>Nome</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Descrição</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ category.slug }}</td>
            </tr>
            <tr>
                <th>Criado em</th>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Atualizado em</th>
                <td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_index') }}" class="btn btn-default">Voltar</a>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-primary">Editar</a>
    {% endif %}
</section>
{% endblock %}
